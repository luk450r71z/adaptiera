{
    "app": {
        "name": "IA Adaptiera",
        "version": "1.0.0",
        "debug": true
    },
    "api": {
        "base_url": "http://localhost:8000",
        "timeout": 30
    },
    "chatbot": {
        "welcome_message": "¡Hola! Soy el asistente virtual de Adaptiera. ¿En qué puedo ayudarte?",
        "max_history": 10,
        "response_timeout": 5
    },
    "form": {
        "max_message_length": 1000,
        "required_fields": ["nombre", "email", "mensaje"]
    },
    "security": {
        "token_expiration": 3600,
        "max_login_attempts": 3
    }
} 